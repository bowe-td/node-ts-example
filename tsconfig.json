{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "commons/*": ["./commons/*"],
      "modules/*": ["./modules/*"],
      "config/*": ["./config/*"],
      "routing/*": ["./routing/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
